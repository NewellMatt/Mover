{{#if editFormShowing}}
  <div class="editMove">
    <h2 class="editHeader">Edit Question</h2>
    <form class="editMoveForm">
      <div class="form-group">
        <label for="type">Type<i class="fa fa-asterisk"></i></label>
        {{input value=move.type placeholder="Move Furniture, Craigslist Pickup, Donation, etc." id="type" required="required"}}
      </div>

      <div class="form-group">
        <label for="itemsList">Items List<i class="fa fa-asterisk"></i></label>
        {{input value=move.itemsList placeholder="Couch, Bed Frame, Boxes, etc." id="itemsList" required="required"}}
      </div>
      <div class="form-group">
        <label for="numberOfItems">Number of Items<i class="fa fa-asterisk"></i></label>
        {{input value=move.numberOfItems id="numberOfItems" required="required"}}
      </div>
      <div class="longLat">
        <div class="form-group">
          <label for="latitude">Latitude</label>
          {{input value=move.latitude id="latitude"}}
        </div>

        <div class="form-group">
          <label for="longitude">Longitude</label>
          {{input value=move.longitude id="longitude"}}
        </div>
      </div>


      <div class="form-group">
        <label for="description">Description</label>
        {{input value=move.description id="description"}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=move.image id="image"}}
      </div>

      <div class="form-group">
        <label for="toAddress">What address are you moving to?<i class="fa fa-asterisk"></i></label>
        {{input value=move.toAddress id="toAddress" required="required"}}
      </div>

      <div class="form-group">
        <label for="fromAddress">What address are you moving from?<i class="fa fa-asterisk"></i></label>
        {{input value=move.fromAddress id="fromAddress" placeholder="Address" required="required"}}
      </div>



      <div class="form-group">
        <label>
          Date of Move:
          <br>
          {{pikaday-input value=date id="date" required="required" format="DD/MM/YYYY" placeholder="MM/DD/YYYY"}}
        </label>
      </div>
      <div class="userCheckboxContainer">
        <div class="userCheckboxes">
          <div class="form-group-check">
            <label for="fragile">Fragile?</label>
            {{input type="checkbox" id="fragile" checked=move.fragile class="toggle"}}
          </div>

          <div class="form-group-check">
            <label for="assembly">Assembly required?</label>
            {{input type="checkbox" id="assembly" checked=move.assembly class="toggle"}}
          </div>

          <div class="form-group-check">
            <label for="stairs">Stairs to Climb?</label>
            {{input type="checkbox" id="stairs" checked=move.stairs class="toggle"}}
          </div>
        </div>
      </div>
      <button {{action 'editMove' move}}>Save Edit</button>
    </form>
    <button{{action 'toggleDetail'}}>Nevermind!</button>
  </div>
  {{else}}
    <div class="editMove">
      <button class="editMoveButton" {{action 'toggleDetail'}}>Edit This Move</button>
    </div>
  {{/if}}
