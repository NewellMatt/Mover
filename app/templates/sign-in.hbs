<div class="signInContainer">
  <div class="forms">
    <div class="login">
      {{input type="text" value=userEmail placeholder="Email"}}<br>
      {{input type="password" value=userPassword placeholder="Password"}}<br>
      <button {{action "login"}}> Login </button>
    </div>
    <hr>
    <div class="signUp">
      <p>Don't have an account yet?</p>
      <form {{action "signUp" on="submit"}}>
        {{input type="text" value=firstName placeholder="First Name" required="required"}}<br>
        {{input type="text" value=lastName placeholder="Last Name" required="required"}}<br>
        {{input type="text" value=email placeholder="Email" required="required"}}<br>
        {{input type="password" value=password placeholder="Password" required="required"}}<br>
        <button type="submit"> Sign Up </button>
      </form>
    </div>
  </div>
</div>
